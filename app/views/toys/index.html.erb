<h2>Welcome, <%= current_user.username.capitalize %>!</h2>

<h4>All Toy Entries:</h4><br>
  <ul>
    <% @toys.each do |toy| %>
      <li><a href="/toys/<%= toy.slug %>"><%= toy.name %> (<%= toy.edition %>)</a> Created by: <a href="/users/<%=toy.user.slug%>"><%=toy.user.slug.capitalize%></a></li><br>
    <% end %>
  </ul>

<button onclick="window.location.href = '/toys/new';">Add New Toy</button>
