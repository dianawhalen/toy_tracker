<% if logged_in? %>
  <h2>Welcome, <%= current_user.username.capitalize %>!</h2>

<h4>All Toy Entries:</h4><br>
  <ul>
    <% @toys.each do |toy| %>
      <li><a href="/toys/<%= toy.slug %>"><%= toy.name %> (<%= toy.edition %>)</a></li><br>
    <% end %>
  </ul>

  <a class="button" href="/toys/new">Add Toy</a>
<% end %>
