<h2>This is the User Model's index page.</h2>

<% if logged_in? %>
  <h2>Welcome, <%= current_user.username.capitalize %>!</h2>

<h3>All Users</h3>
  <ul>
    <% User.all.each do |user| %>
      <li><a href="/users/<%= user.id %>"><%= user.username %></a></li><br>
    <% end %>
  </ul>

  <a class="button" href="/toys/new">Add Toy</a>

  <a class="button" href="/toys">View Collection</a>

<% end %>
